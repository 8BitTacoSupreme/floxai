#!/bin/bash
set -e

echo "ðŸŒŸ Starting FloxAI - The Flox Development Co-pilot"
echo "=================================================="

if [ -z "$FLOX_ENV" ]; then
    echo "âŒ FloxAI must be run inside a Flox environment"
    echo "   This showcases Flox's environment isolation!"
    echo "   Run: flox activate"
    exit 1
fi

# Claude API key will be prompted for securely by FloxAI's key management system
# No need to check for it here - the activation hook handles it

export FLOXAI_DEV_MODE=false

echo "ðŸš€ Starting FloxAI backend (powered by Flox Python)..."
cd backend && python app/main.py &
BACKEND_PID=$!
sleep 2

echo "ðŸŒ Starting FloxAI frontend (powered by Flox Node.js)..."
cd frontend && npm run build > /dev/null 2>&1
npm run preview &
FRONTEND_PID=$!
sleep 3

echo ""
echo "âœ… FloxAI is now running!"
echo "   ðŸŒ Frontend: http://localhost:4173"
echo "   ðŸ”§ Backend:  http://localhost:8000"
echo "   ðŸ“– API Docs: http://localhost:8000/docs"
echo ""
echo "ðŸŽ¯ This demonstrates Flox's power:"
echo "   âœ“ Reproducible environments across platforms"
echo "   âœ“ Multi-language stack coordination (Python + Node.js)"
echo "   âœ“ Service orchestration without Docker"
echo "   âœ“ Zero-config environment setup"
echo ""
echo "Press Ctrl+C to stop FloxAI"

cleanup() {
    echo ""
    echo "ðŸ›‘ Stopping FloxAI services..."
    kill $BACKEND_PID 2>/dev/null || true
    kill $FRONTEND_PID 2>/dev/null || true
    sleep 1
    echo "ðŸ‘‹ FloxAI stopped - Flox environment remains active"
    exit 0
}

trap cleanup SIGINT SIGTERM
wait
