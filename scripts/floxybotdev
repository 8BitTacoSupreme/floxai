#!/bin/bash
set -e

echo "ðŸŒŸ Starting FloxAI Development Mode"
echo "==================================="

if [ -z "$FLOX_ENV" ]; then
    echo "âŒ Must run inside Flox environment"
    echo "   Run: flox activate"
    exit 1
fi

if [ ! -d "$FLOX_ENV_PROJECT/venv" ]; then
    echo "âŒ Virtual environment not found"
    echo "   Run: ./floxai-setup first"
    exit 1
fi

# Claude API key setup for development mode
if [ -z "$CLAUDE_API_KEY" ] && [ -f "$FLOX_ENV_PROJECT/scripts/setup-claude-key.sh" ]; then
    echo "ðŸ”‘ Setting up Claude API key for FloxAI..."
    source "$FLOX_ENV_PROJECT/scripts/setup-claude-key.sh"
    if ! check_existing_key; then
        main
    fi
fi

export FLOXAI_DEV_MODE=true

echo "ðŸš€ Starting backend with hot reload..."
cd $FLOX_ENV_PROJECT/backend
$FLOX_ENV_PROJECT/venv/bin/python app/main.py &
BACKEND_PID=$!
sleep 2

echo "ðŸŒ Starting frontend with hot reload..."
cd $FLOX_ENV_PROJECT/frontend
npm run dev &
FRONTEND_PID=$!
sleep 3

echo ""
echo "âœ… FloxAI Development Environment Ready!"
echo "   ðŸŒ Frontend: http://localhost:3000"
echo "   ðŸ”§ Backend:  http://localhost:8000"
echo "   ðŸ“– API Docs: http://localhost:8000/docs"
echo ""
echo "Press Ctrl+C to stop"

cleanup() {
    echo ""
    echo "ðŸ›‘ Stopping FloxAI..."
    kill $BACKEND_PID $FRONTEND_PID 2>/dev/null || true
    exit 0
}

trap cleanup SIGINT SIGTERM
wait
